module image_render(
		input logic video_on, // From VGA Controller
		input logic [23:0] rgb_pixel, // From ROM Memory
		input logic [9:0] x, y,
		output logic [7:0] R , G, B  // To VGA Controller
	);
    always_comb begin
		if(~video_on) {R, G, B} = 24'h000000; 
		else begin
			if (y < 100) {R, G, B}= pixel_rgb;
			else {R, G, B} = 24'bDF2828;
		end
	end  
endmodule
