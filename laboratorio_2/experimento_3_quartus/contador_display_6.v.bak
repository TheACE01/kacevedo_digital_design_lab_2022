`timescale 1ps / 1ps 

module contador_display_6(clk, rst, S0, S1);

	input clk, rst;
	output [6:0] S0, S1;
	parameter N = 6;
	wire [5:0] count;
	

	contador_regresivo #(.N(N)) contador(
		.clk(clk),
		.rst(rst),
		.count(count)
	);
	
	wire digit0 = count % 10;
	wire digit1 = count / 10;
	
	display_hex seg0(
		.A3(digit0[3]),
		.A2(digit0[2]),
		.A1(digit0[1]),
		.A0(digit0[0]),
		.A(S0[6]),
		.B(S0[5]),
		.C(S0[4]),
		.D(S0[3]),
		.E(S0[2]),
		.F(S0[1]),
		.G(S0[0]));
		
	display_hex seg1(
		.A3(digit1[3]),
		.A2(digit1[2]),
		.A1(digit1[1]),
		.A0(digit1[0]),
		.A(S1[6]),
		.B(S1[5]),
		.C(S1[4]),
		.D(S1[3]),
		.E(S1[2]),
		.F(S1[1]),
		.G(S1[0]));

endmodule
